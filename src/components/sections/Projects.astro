---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---

<!-- Section title="Proyectos">

</Section>

-->
<Section title="Proyectos">
    <ul>
        {
            projects.map(({ url, description, tecnologia, name }) => {
                return (
                    <li>
                        <article>
                            <header>
                                <h3>
                                    <a
                                        href={url}
                                        target="_blank"
                                        title={`Ver el proyecto ${name}`}>
                                        {name}
                                    </a>
                                    <p>
                                        {description}
                                    </p>
                                </h3>
                            </header>
                            <footer>
                               <span>{tecnologia}</span>
                            </footer>
                        </article>
                    </li>
                );
            })
        }
    </ul>
</Section>
<style>
      ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;

  }

  article {
    border-radius: 8px;
    border: 2px solid #686868;
    gap: 25px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  /* background-image: url('../img/fondo3.png');
   background-size: cover;
   background-position: center;*/
   filter: sepia(0);
   
  }
  h3{
    font-weight: 400;
  }

  p{
    margin-top: 2em;
    font-weight: 400;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

a {
    color: #111;
  }
  .dark article a{
    color: whitesmoke;
  }

  article a:hover {
    text-decoration: underline;
    color: #006c34;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  article h3 span {
    color: rgb(0, 188, 47);
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>