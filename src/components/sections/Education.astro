---
import Section from '@/components/Section.astro';
import { education } from "@cv";
---

<Section title="Educacion">
    <ul>
        {
            education.map(({ institution, startDate, endDate, area, courses }) => {
                const years = `${startDate} - ${endDate}`;

                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                <h3>{institution}</h3>
                                <h4>{area}</h4>
                                </div>
                                
                                <time>{years}</time>
                            </header>
                        </article>
                    </li>
                );
            })
        }
    </ul>

</Section>
