---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="dark:bg-[#0F172A]">
        <slot />
    </body>
</html>
<style is:global>
    ::root{
        /*color-scheme: light dark;*/
    }
    html {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            "Courier New",
            Courier,
            monoespace;
        background: rgb(255, 255, 255);
        letter-spacing: -0.025rem;
    }
    body, /* VAMOS A RESETEAR ALGUNOS ESTILOS, TIPO tailwind pero diferente */
    figure {
        margin: 0;
        padding: 0;
    }
    a {
        text-decoration: none;
    }
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }
    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }
    h1,
    h2,
    h3,
    h4 {
        margin: 0;
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }
    p{
        color:#888;
        font-size: .9rem;
        line-height: 1.5;
        margin: 0;
        text-wrap: pretty; /* NO SOPORTADO POR TODOS LOS NAVEGADORES, PERO RESULTA UTIL */
		
	}
    .dark{
    background: #1c003a;
    }
  .dark h1,
  .dark h2,
  .dark h3,
  .dark a {
    color: white;
  }

  .dark h3 {
    color: white;
  }

  .dark p,
  .dark h4 {
    color: #94a3b8;
  }

  .dark span,
  .dark time {
    color: #38bdf8;
  }

  @media print {
    body {
      background-color: #0f172a;
    }
  }
	
</style>
