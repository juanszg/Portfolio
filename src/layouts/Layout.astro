---
interface Props {
    title: string;
}

const { title } = Astro.props;

import Background from "../components/img/background2.png"
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>


        <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    </head>
    <body class="dark:bg-[#0F172A]">
        <slot />
    </body>
</html>
<style is:global>
    ::root{
        /*color-scheme: light dark;*/
    }
    html {
       background-color: whitesmoke;
        font-family: 
         noto sans;
            /*Menlo,
            Monaco,
            Lucida Console,
            "Courier New",
            Courier,
            monoespace;
        background: rgb(255, 255, 255);
        letter-spacing: -0.025rem;
       /* background-image: url('../components/img/background2.png');
        background-size: contain;
       filter: sepia(0);*/
     
    }/* VAMOS A RESETEAR ALGUNOS ESTILOS, TIPO tailwind pero diferente */
    body, 
    figure {
        margin: 0;
        padding: 0;
    }
    a {
        text-decoration: none;
    }
    ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }
    span{
        color: #969696;
        display:flex;
        align-items: center;
        gap: .25rem;
        font-size: .85rem;
        letter-spacing: -0.05rem;
      }
      

    header{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time{
        color: #666;
        font-size: 0.85rem;
        
    }

    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }
    
    h1,
    h2,
    h3,
    h4 {
        margin: 0;
        font-family:
            /*system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;*/
            noto sans;
    }
    p{
        color:#888;
        font-size: .9rem;
        line-height: 1.5;
        margin: 0;
        text-wrap: pretty; /* NO SOPORTADO POR TODOS LOS NAVEGADORES, PERO RESULTA UTIL */
		    margin-bottom: 1em;
	}
    .dark{
    /*background: #1c003a;*/
    background-color:#001f15 ;
    }
  .dark h1,
  .dark h2,
  .dark h3,
  .dark a {
    color: white;
  }


  .dark p,
  .dark h4 {
    color: #94a3b8;
  }
  .dark article a{
    color: aliceblue;
  }
  .dark span,
  .dark time {
    /*color: #38bdf8;*/
    color: hsl(148, 89%, 41%);
  }

  @media print {
    body {
      background-color: #0f172a;
    }
  }
